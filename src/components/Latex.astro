---
import katex from "katex";

const { formula = "", inline = true } = Astro.props;
const html = katex.renderToString(formula, { throwOnError: false, displayMode: !inline });
---

<!-- https://danidiaztech.com/create-astro-latex-component/ -->
<!-- https://katex.org/ -->

<span class={inline ? "inline" : "block text-center"}>
  <span set:html={html} class="" />
</span>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/katex@0.16.18/dist/katex.min.css"
  integrity="sha384-veTAhWILPOotXm+kbR5uY7dRamYLJf58I7P+hJhjeuc7hsMAkJHTsPahAl0hBST0"
  crossorigin="anonymous"
/>
